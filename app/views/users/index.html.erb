<%provide(:title, 'All Users')%>
<h1>All users</h1>

<ul class="users">
	<%@users.each do |user|%>
	<li>
		<%= gravatar_for user, size: 50 %>
		<%= user.name %>		
		
    	| <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
        
	</li>
	
		
	
	<%end%>
</ul>


  


 